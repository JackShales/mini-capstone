<h2>Add an image</h2>

<%= form_tag "/images", method: :post do %>
  <div class="form-group">
    <%= label_tag :url %>
    <%= text_field_tag :url, '', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= hidden_field_tag :drink_id, @drink.id, class: "form-control"  %>
  </div>
  <div>
    <%= submit_tag "Submit image", class: "btn btn-default" %>
  </div>
<% end %>

<div>
  <a href="/drinks">Back to all drinks</a>
</div>