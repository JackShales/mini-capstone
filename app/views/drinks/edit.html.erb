<h1>Drink Editor</h1>

<%= form_tag "/drinks/#{@drink.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @drink.name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @drink.price, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :image, "Image (url)"%>
    <%= text_field_tag :image, @drink.image, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @drink.description, class: "form-control"  %>
  </div>
  <div>
    <%= submit_tag "Update drink", class: "btn btn-default" %>
  </div>
<% end %>

<div>
   <a href="/drinks">Back to all drinks</a>
</div>