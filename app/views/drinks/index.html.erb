<h2 class="index">All Drinks</h2>
<br>
<% @drinks.each_slice(3) do |three_drinks| %>
  <div class="row">
    <% three_drinks.each do |drink| %>
      <div class="col-md-4">
        <div class="well">
          <h4 class="index">
            <a href="/drinks/<%= drink.id %>"><%= drink.name + ", " + drink.price %> </a>
          </h4>
          <img src="<%= drink.image %>">
          <p class="index"><%= drink.description %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

