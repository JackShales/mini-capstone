<h1>New Drink</h1>

<%= form_tag '/drinks', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, '', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, '', class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, '', class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier_id %>
    <%= text_field_tag :supplier_id, '', class: "form-control"  %>
  </div>
  <div>
    <%= submit_tag "Submit drink", class: "btn btn-default" %>
  </div>
<% end %>

<div>
  <a href="/drinks">Back to all drinks</a>
</div>
