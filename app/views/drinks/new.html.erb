<h1>New Drink</h1>

<% if @drink.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@drink.errors.count, "error") %> prohibited this product from being saved:</h2>     
    <ul>
      <% @drink.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @image %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this product from being saved:</h2>     
      <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_tag '/drinks', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @drink.name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @drink.price, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @drink.description, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier_id, "Supplier ID#" %>
    <%= text_field_tag :supplier_id, @drink.supplier_id, class: "form-control"  %>
  </div>

  <% if @image %>
    <div class="form-group">
      <%= label_tag :image_url, "Image Url" %>
      <%= text_field_tag :image_url, @image.url, class: "form-control"  %>
    </div>
  <% end %>

  <div>
    <%= submit_tag "Submit drink", class: "btn btn-default" %>
  </div>
<% end %>

<div>
  <a href="/drinks">Back to all drinks</a>
</div>
